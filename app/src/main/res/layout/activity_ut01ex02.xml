<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_margin="@dimen/size_margin_small">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_size"
        android:layout_margin="@dimen/size_margin"
        app:srcCompat="@drawable/ic_elefunfullsvg" />


    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/title"
        android:textStyle="bold"
        android:textSize="@dimen/size_text_small"
        android:layout_marginLeft="@dimen/size_text_small"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/lorem"
        android:maxLines="2"
        android:ellipsize="end"
        />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/size_text_small"
            android:layout_height="@dimen/size_text_small"
            android:src="@drawable/ic_star"
            android:tint="@color/yellow"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/size_text_small"
            android:layout_height="@dimen/size_text_small"
            android:src="@drawable/ic_star"
            android:tint="@color/yellow"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/size_text_small"
            android:layout_height="@dimen/size_text_small"
            android:src="@drawable/ic_star"
            android:tint="@color/yellow"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/size_text_small"
            android:layout_height="@dimen/size_text_small"
            android:src="@drawable/ic_star"
            android:tint="@color/yellow"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/size_text_small"
            android:layout_height="@dimen/size_text_small"
            android:src="@drawable/ic_star"
            android:tint="@color/yellow"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right"
            >
            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="@dimen/size_text_small"
                android:layout_height="@dimen/size_text_small"
                android:src="@drawable/ic_favorite"
                android:tint="@color/red"
                />

        </LinearLayout>
    </LinearLayout>




</LinearLayout>