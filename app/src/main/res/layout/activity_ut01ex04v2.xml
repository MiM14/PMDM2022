<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/size_image_big">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_image_big"
            android:layout_marginStart="@dimen/size_margin_small"
            android:layout_marginTop="@dimen/size_margin_small"
            android:layout_marginEnd="@dimen/size_margin_small"
            android:layout_marginBottom="@dimen/size_margin_small"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_food" />

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="@dimen/size_image_medium"
            android:id="@+id/txt_space"
            android:layout_marginStart="@dimen/size_margin_small"
            android:layout_marginTop="@dimen/size_margin_small"
            android:layout_marginEnd="@dimen/size_margin_small"
            android:src="@color/teal_200"
            android:layout_alignParentBottom="true"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/burger"
            android:text="Hamburguesa"
            android:textColor="@color/black"
            android:layout_marginStart="15dp"
            android:textSize="@dimen/size_text_small"
            android:layout_alignTop="@+id/txt_space"
            android:textStyle="bold"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="@dimen/size_text_small"
        android:layout_marginStart="@dimen/size_text_small"
        android:layout_marginTop="@dimen/size_text_small"
        android:background="#B0FFFFFF">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_burger" />

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:layout_below="@+id/burger"
        android:layout_marginStart="@dimen/size_text_small"
        android:text="Bar restaurante Soul Kitchen" />
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignBottom="@+id/txt_space">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Total 0 Ptos."
            android:textColor="@color/black"
            android:layout_marginStart="15dp"
            android:layout_marginBottom="15dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:layout_marginStart="@dimen/size_margin_small"
            android:text="Media: 0.0"/>
        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="@dimen/size_text_small"
            android:layout_height="@dimen/size_text_small"
            android:src="@drawable/ic_fill_star"
            android:tint="@color/yellow"/>
    </LinearLayout>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/share"
        android:layout_width="@dimen/size_margin"
        android:layout_height="@dimen/size_margin"
        android:layout_alignBottom="@+id/txt_space"
        android:layout_alignEnd="@+id/txt_space"
        android:src="@drawable/ic_share"
        android:layout_margin="@dimen/size_margin_small"
        android:tint="@color/red"
        />
    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/fav"
        android:layout_width="@dimen/size_margin"
        android:layout_height="@dimen/size_margin"
        android:layout_alignBottom="@+id/txt_space"
        android:layout_toStartOf="@+id/share"
        android:src="@drawable/ic_favorite"
        android:layout_margin="@dimen/size_margin_small"
        android:tint="@color/red"
        />
</RelativeLayout>